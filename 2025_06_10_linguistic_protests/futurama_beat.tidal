d8 $ (# amp "[0.5 0.3]*8") $ slow 2 $  n ("~ 1 ~ [1 12]   ~ [1 1] [< ~ 9 > 12] 1  ~ 1 ~ 1  ~ 1 9 1" |- 1) # m 8


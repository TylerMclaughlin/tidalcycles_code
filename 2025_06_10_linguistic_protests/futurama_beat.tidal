:script "~/Music/ableton_songs/toolz.tidal"

setbpm 100 

-- kick
d1 $ drumz $ rizz 8 "0 0.01" $
  mask "[<t  <f t>> t]*4 "$
  (|* amp "1.2 0.7 1 0.8 1.1 0.75 1 0.74") $
  (# amp 0.4) $ 
  r (segment 16 $ range 0 0.002 $ fast 4 $ cosine) $
  n "{0 ~ 0 ~ 0 ~ <~ ~ ~ ~>}%16" # m 1

-- just oh snare
d3 $ drumz $ rizz 8 "0 0.01" $
     r (segment 16 $ range 0 0.005 $ fast 2 $  cosine) $
     n "[<~ [~ [2,3] ~!9]> 5]*4" # m 3


-- sixteenth hats and snare
d3 $ drumz $ (|* amp "1.1 0.9 1.05 <0.8 0.78 0.81>") $ (# amp 0.4) $ stack [
    rizz 8 "0 0.01" $ 
     r (segment 16 $ range 0 0.0025 $ fast 4 $  cosine) $
     n "[<~ [~ [2,3] ~!10]> 5]*4" # m 3,
    rizz 8 "0 0.015"  $
    r (segment 16 $ range 0 0.005 $ fast 2 $ cosine) $
    degradeBy 0.2 $ n (cat ["[[~ 4] [~ 4]]*4" ] ) # m 3 ]

-- just sixteenth hats
d5 $ drumz $ rizz 8 "0 0.015" $
     r (segment 16 $ range 0 0.005 $ fast 2 $ cosine) $
     degradeBy 0.2 $ n "[[~ 4] [~ 4]]*4" # m 3

d5 silence

-- harm series background notes
d6 $ struct  "{~ t ~ ~ ~ t ~ }%16" $ n ("[3,4]" |+ "{0 1 2 4 1 2 3}%8") # m 5

d2 silence




-- abcd
